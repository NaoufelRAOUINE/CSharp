<Window x:Class="DemoWPF06.FileExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWPF06"
        mc:Ignorable="d"
        Title="FileExplorer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtChemin" HorizontalAlignment="Left" Height="23" Margin="49,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="428"/>
        <Button x:Name="btnParcourir" Content="..." HorizontalAlignment="Left" Margin="538,50,0,0" VerticalAlignment="Top" Width="75" Click="btnParcourir_Click"/>
        <ScrollViewer Height="284" Margin="49,101,0,0" Width="428" HorizontalAlignment="Left" VerticalAlignment="Top" >
        <StackPanel x:Name="stkFichier" Opacity="0.99" Background="#FFD9DAD0"/>
        </ScrollViewer>
        <TextBlock x:Name="txtInfos" HorizontalAlignment="Left" Margin="538,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="284" Width="220" Background="#FFF7F7F7"/>

    </Grid>
</Window>
